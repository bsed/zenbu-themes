! Fonts
URxvt.font:      {{ #term_fonts }}xft:{{ . }}:pixelsize={{ pixelsize }}:antialias={{ antialias }},{{ /term_fonts }}
URxvt.boldFont:
XTerm.font:      {{ #term_fonts }}xft:{{ . }}:pixelsize={{ pixelsize }}:antialias={{ antialias }},{{ /term_fonts }}
XTerm.boldFont:

! General
*.scrollBar: false
*.saveLines: 8192
*.internalBorder: 10
*.cursorUnderline: true
*.cursorBlink: true
*.dynamicColors:on
*.letterSpace: {{ spacing }}

Xft.autohint: 0
Xft.dpi: 96
Xft.hintstyle: hintnone
Xft.lcdfilter: lcddefault
Xft.rgba: rgb

! Separate settings for emacs
emacs.internalBorder: 0

! Rofi
rofi.opacity: 80
rofi.width: 40
rofi.lines: 3
rofi.font: {{ fffont }} {{ dunstfsize }}
rofi.padding: 50
rofi.bw: {{ bordersize }}
rofi.terminal: urxvt
rofi.disable-history: true
rofi.color-window: {{ rofibg }}, {{ border }}
rofi.color-normal: {{ rofibg }}, {{ fgc }}, {{ rofibg }}, {{ n_primary }}, {{ rofibg }}
rofi.color-active: {{ rofibg }}, {{ fgc }}, {{ rofibg }}, {{ b_primary }}, {{ rofibg }}
rofi.color-urgent: {{ rofibg }}, {{ fgc }}, {{ rofibg }}, {{ n_secondary }}, {{ rofibg }}

! Clickable Links
*perl-ext-common:	 default,matcher,clipboard
*keysym.Shift-Control-V: perl:clipboard:paste
*urlLauncher:		 firefox
*matcher.button:	 1
*url-select.underline:	 true

! Colors
*.borderColor:  {{ bgc }}
*.background:   {{ bgc }}
*.foreground:   {{ fgc }}
*.cursorColor:  {{ csc }}

! Black
*color0:       {{ n_black }}
*color8:       {{ b_black }}

! Red
*color1:       {{ n_red }}
*color9:       {{ b_red }}

! Green
*color2:       {{ n_green }}
*color10:      {{ b_green }}

! Yellow
*color3:       {{ n_yellow }}
*color11:      {{ b_yellow }}

! Blue
*color4:       {{ n_blue }}
*color12:      {{ b_blue }}

! Magenta
*color5:       {{ n_magenta }}
*color13:      {{ b_magenta }}

! Cyan
*color6:       {{ n_cyan }}
*color14:      {{ b_cyan }}

! White
*color7:       {{ n_white }}
*color15:      {{ b_white }}
